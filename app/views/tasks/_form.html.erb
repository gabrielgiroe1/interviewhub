<%= form_with model: @task  do |task|%>
  <div class="form-group mt-4">
    <div class="mb-4">
      <%=task.label :title%>
      <%=task.text_field :title, class: "form-control"%>
    </div>

    <div class="mb-4">
      <%=task.label :due_date%>
      <%=task.datetime_select :due_date, class: "form-control"%>
    </div>

    <div class="mb-4 flex space-x-2">
      <%=task.submit "Submit",  class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
    <%= link_to "Back to Tasks", tasks_path,  class: " bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<%end%>